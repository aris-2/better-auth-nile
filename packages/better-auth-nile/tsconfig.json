{
    "compilerOptions": {
      "target": "ESNext",         
      "module": "ESNext",               
      "moduleResolution": "node",    
      "esModuleInterop": true,      
      "skipLibCheck": true,     
      "strict": true,            
      "outDir": "./dist",      
      "declaration": true,            
      "declarationMap": true,     
      "sourceMap": true,             
      "allowJs": true,                
      "lib": ["ESNext"]              
    },
    "include": ["src/**/*"],           
    "exclude": ["node_modules"]         
  }